---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

import Works from "../components/Works.astro";
import Layout from "../layouts/Layout.astro";

const works = await getCollection("works");

const webProjects = works
  .filter((item) => item.data.category === "websites")
  .map((item) => item.data);
const gitProjects = works
  .filter((item) => item.data.category === "api")
  .map((item) => item.data);
const otherProjects = works
  .filter((item) => item.data.category === "others")
  .map((item) => item.data);
---

<Layout title="My Works | Joshue Abance">
  <div class="text-center text-white">
    <div class="text-left mb-4">
      <small>
        <a href="/" class="hover:underline"> Return Home</a>
      </small>
    </div>

    <div>
      <h3 class="text-3xl font-black">My Works</h3>
      <p>Discover some of the projects that I have made and created</p>
      <p>
        See more on my
        <a
          href="https://github.com/tbdsux?tab=repositories"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold hover:underline"
        >
          Github
        </a> page.
      </p>
    </div>

    <div class="space-y-20 mt-12">
      <div class="space-y-12">
        <div class="">
          <h4 class="text-white text-left font-bold mb-4">Works</h4>

          <Works works={webProjects} />
        </div>

        <div class="">
          <h4 class="text-white text-left font-bold mb-4">Projects</h4>

          <Works works={gitProjects} />
        </div>

        <div class="">
          <h4 class="text-white text-left font-bold mb-4">Others</h4>

          <Works works={otherProjects} />
        </div>
      </div>

      <div class="text-center space-y-4">
        <p>
          Checkout my <strong><code>Github</code></strong> profile for more of my
          projects and works
        </p>
        <a
          title="Github"
          href="https://github.com/tbdsux?tab=repositories"
          target="_blank"
          rel="noreferrer"
          class="text-sm bg-black/20 hover:bg-black/40 duration-300 inline-flex items-center py-2 px-6 border border-white/10 rounded-xl"
        >
          <Image
            alt="Github"
            width={28}
            height={28}
            src="https://cdn.simpleicons.org/github/white"
          />

          <span class="ml-2">@tbdsux</span>
        </a>
      </div>
    </div>
  </div>
</Layout>
